<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="24dp">

    <ImageButton
        android:id="@+id/btn_back_english"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:background="@color/white"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_title_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Английский"
        android:textSize="18dp"
        android:fontFamily="@font/ss_bold_700"
        android:layout_marginTop="28.5dp"
        android:layout_marginBottom="20.5dp"
        android:textColor="@color/very_dark_teal_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>