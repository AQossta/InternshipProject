<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_internship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_internship"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/tv_edit_email_login"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/img_internship"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <EditText
        android:id="@+id/edit_email_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_edittext_12dp_default"
        android:backgroundTint="@color/grey"
        android:hint="Email"
        android:textColorHint="@color/very_dark_teal_blue"
        android:textColor="@color/very_dark_teal_blue"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:fontFamily="@font/ss_medium_500"
        android:padding="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_edit_password_login"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_email_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <EditText
            android:id="@+id/edit_password_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/background_edittext_12dp_default"
            android:backgroundTint="@color/grey"
            android:hint="Пароль"
            android:textColorHint="@color/very_dark_teal_blue"
            android:textColor="@color/very_dark_teal_blue"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:fontFamily="@font/ss_medium_500"
            android:padding="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_password_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="153dp"
            android:layout_marginVertical="12dp"
            android:text="Войти"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/background_button_24dp_circle"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/ss_bold_700"
            android:textStyle="normal"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
